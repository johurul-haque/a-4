{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@utils": ["utils"],
      "@config": ["config"],
      "@middlewares/*": ["middlewares/*"],
      "@helpers/*": ["helpers/*"],
      "@modules/*": ["modules/*"],
      "@/*": ["./*"]
    },
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
